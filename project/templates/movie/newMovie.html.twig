{% extends 'base.html.twig' %}

{% block title %}New Movie{% endblock %}

{% block body %}
    <section class="bg-slate-500">
        <div class="container mx-auto flex items-center justify-center min-h-screen">
            <div class="aspect-square w-[50vw] rounded-md shadow bg-white p-10">
                <h1 class="text-3xl text-center font-bold">Register New Movie</h1>
                
                    {{ form_start(form) }}
                    <div class="flex flex-col gap-10 items-start">
                        <div class="form-group">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.overview) }}
                            {{ form_widget(form.overview) }}
                        </div>

                        {{ form_widget(form.save) }}
                    </div>
                        
                    {{ form_end(form) }}
                
            </div>
        </div>
    </section>
{% endblock %}
